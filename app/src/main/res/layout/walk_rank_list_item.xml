<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:background="#ffffff"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/state"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="43px"
        android:textSize="@dimen/t51" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/state"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="112px"
            android:layout_height="112px"

            android:layout_centerVertical="true"
            android:background="@drawable/default_head"
            android:layout_marginLeft="22px" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textColor="@color/c_aaaaaa"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_toRightOf="@+id/user_photo"
            android:textSize="@dimen/t43" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingRight="43px">


            <TextView
                android:id="@+id/walk_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textColor="@color/c_aaaaaa"
                android:textSize="@dimen/t51" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="14px"
                android:text="æ­¥"
                android:textSize="37px" />

        </LinearLayout>



    </RelativeLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:layout_marginLeft="120px"
    android:background="#ededed"
    android:layout_marginRight="30px"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>