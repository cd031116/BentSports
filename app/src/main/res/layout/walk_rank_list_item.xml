<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:gravity="center_vertical">
   <TextView
       android:id="@+id/state"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="43px"
       android:textSize="@dimen/t51"/>

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="112px"
        android:layout_height="112px"
        android:layout_marginLeft="22px"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_aaaaaa"
            android:textSize="@dimen/t43"
            android:layout_marginLeft="30px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="43px"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/walk_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_aaaaaa"
                android:textSize="@dimen/t51"
                android:layout_marginLeft="30px"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="14px"
