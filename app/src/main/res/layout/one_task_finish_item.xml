<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/t108"
        android:background="@drawable/mo_ren"
        android:layout_height="@dimen/t108" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/t28"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="小拓"/>

    <TextView
        android:id="@+id/item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/t65"
        android:paddingTop="@dimen/t65"
        android:textColor="@color/c_fd7d6f"
        android:textSize="@dimen/t43"
        android:text="小拓"/>

</LinearLayout>