<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/caidengmi"
            android:layout_width="217px"
            android:layout_height="217px"/>

        <ImageView
            android:id="@+id/fangbianpao"
            android:layout_width="217px"
            android:layout_height="217px"
            android:layout_marginLeft="120px"/>

        <ImageView
            android:id="@+id/hongbaoyu"
            android:layout_width="217px"
            android:layout_height="217px"
            android:layout_marginLeft="120px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diandenglong"
            android:layout_width="217px"
            android:layout_height="217px" />

        <ImageView
            android:id="@+id/liunianshou"
            android:layout_width="217px"
            android:layout_height="217px"
            android:layout_marginLeft="120px" />

        <ImageView
            android:id="@+id/jixiangqian"
            android:layout_width="217px"
            android:layout_height="217px"
            android:layout_marginLeft="120px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kanyanchu"
            android:layout_width="217px"
            android:layout_height="217px"
            android:layout_marginLeft="90px"/>
    </LinearLayout>

</LinearLayout>