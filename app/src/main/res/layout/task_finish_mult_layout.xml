<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">


    <LinearLayout
        android:id="@+id/task_finish_layout"
        android:layout_width="@dimen/t995"
        android:layout_height="@dimen/t492"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/t28"
        android:layout_marginTop="@dimen/t80"
        android:background="@drawable/task_finish_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t170"
            android:paddingTop="@dimen/t74"
            android:text="我的成绩"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/t51" />


        <RelativeLayout
            android:layout_width="@dimen/t995"
            android:layout_height="@dimen/t192"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t48"
                android:drawableLeft="@drawable/task_time"
                android:drawablePadding="@dimen/t15"
                android:text="00:00:00"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/t43" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t400"
                android:drawableLeft="@drawable/score"
                android:drawablePadding="@dimen/t15"
                android:text="120分"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/t43" />


            <TextView
                android:id="@+id/all_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/t92"
                android:text="/12" />

            <TextView
                android:id="@+id/finish_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/all_task"
                android:drawableLeft="@drawable/map_task"
                android:text="6"
                android:textColor="@color/c_fd7d6f"
                android:textSize="@dimen/t43" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/normal_bg" />

        <TextView
            android:id="@+id/look_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看排行"
            android:textColor="#f2b645"
            android:textSize="@dimen/t51" />
    </LinearLayout>


    <ImageView
        android:id="@+id/finish_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/t119"
        android:background="@drawable/situation" />
</RelativeLayout>