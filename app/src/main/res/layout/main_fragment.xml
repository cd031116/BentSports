<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ededed"
            android:orientation="vertical"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bg_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/paiming_img" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="425px"
                    android:layout_marginTop="265px">

                    <ImageView
                        android:id="@+id/head_1"
                        android:layout_width="224px"
                        android:layout_height="224px"
                        android:background="@drawable/jifen_huang" />

                    <TextView
                        android:id="@+id/name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/head_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40px"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#ffffff"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/jifen_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="214px"
                        android:textColor="#de4852"
                        android:textSize="37px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="769px"
                    android:layout_marginTop="495px">

                    <ImageView
                        android:id="@+id/head_3"
                        android:layout_width="224px"
                        android:layout_height="224px"
                        android:background="@drawable/jifen_huang" />

                    <TextView
                        android:id="@+id/name_3"
                        android:layout_width="224px"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/head_3"
                        android:layout_below="@id/head_3"
                        android:layout_marginTop="40px"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/jifen_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_3"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="95px"
                        android:textColor="#de4852"
                        android:textSize="37px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105px"
                    android:layout_marginTop="409px">

                    <ImageView
                        android:id="@+id/head_2"
                        android:layout_width="224px"
                        android:layout_height="224px"
                        android:background="@drawable/jifen_huang" />

                    <TextView
                        android:id="@+id/name_2"
                        android:layout_width="224px"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/head_2"
                        android:layout_below="@id/head_2"
                        android:layout_marginTop="15px"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/jifen_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_2"
                        android:layout_marginLeft="85px"
                        android:layout_marginTop="145px"
                        android:textColor="#de4852"
                        android:textSize="37px" />
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/range_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>