<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.cn.bent.sports.view.activity.play.PrepareActivity">

    <include layout="@layout/view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:orientation="vertical"
        android:padding="43px">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="要开始了"
            android:textColor="#000000"
            android:textSize="70px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_marginTop="43px"
            android:background="@drawable/recomm_bg"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_marginTop="43px"
            android:text="有一个人叫真咯嗦，娶了个老婆叫要你管，生了个儿子叫麻烦。有一天麻烦不见了！夫妻俩就去报案。警察问爸爸：请问这位男士你叫啥名字？爸爸说:真咯嗦。警察很生气，然后 他又问妈妈叫啥名字。妈妈说:要你管。警察非常生气的说:你们要干什么?夫妻俩说：找麻烦"
            android:textSize="53px"/>

    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    <TextView
        android:id="@+id/start_t"
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="开始"
        android:textSize="70px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/re_circle_bg"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:padding="43px"
        android:layout_below="@+id/start_t"
        android:layout_marginBottom="20px"
        android:layout_centerHorizontal="true"
        android:text="请确保所有队员已准备好哦"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/wc"
            android:layout_marginRight="43px"
            android:layout_below="@+id/start_t"/>



    </RelativeLayout>
</RelativeLayout>
