<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="870px"
        android:layout_height="1225px"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#ededed"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="match_parent"
                android:layout_height="462px"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="446px"
                android:background="@drawable/play_fun_red_bg">

                <TextView
                    android:id="@+id/p_num"
                    android:layout_width="213px"
                    android:layout_height="138px"
                    android:layout_marginLeft="64px"
                    android:background="@drawable/label_rute"
                    android:gravity="center"
                    android:paddingBottom="5px"
                    android:text="1人/组"
                    android:textColor="#3fcfe4" />

                <TextView
                    android:id="@+id/name_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p_num"
                    android:layout_centerHorizontal="true"
                    android:padding="43px"
                    android:text="寻找教堂密码"
                    android:textColor="#ffffff"
                    android:textSize="57px" />

                <LinearLayout
                    android:id="@+id/shoum_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_p"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/p_num"
                        android:layout_centerHorizontal="true"
                        android:text="一次穿越"
                        android:textColor="#ffffff"
                        android:textSize="57px" />

                    <TextView
                        android:id="@+id/num_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/p_num"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="70px"
                        android:text="12个点标"
                        android:textColor="#ffffff"
                        android:textSize="57px" />

                </LinearLayout>


                <TextView
                    android:id="@+id/go_task"
                    android:layout_width="720px"
                    android:layout_height="142px"
                    android:layout_below="@+id/shoum_p"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="110px"
                    android:background="@drawable/white_fun_bg"
                    android:gravity="center"
                    android:text="马上开跑"
                    android:textColor="#fd7d6f"
                    android:textSize="57px" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>