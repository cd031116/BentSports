<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1009px"
    android:layout_height="540px">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="904px"
        android:layout_height="match_parent"
        android:background="@color/comm_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/quanbu"
                android:gravity="center_horizontal"
                android:text="全部"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/yuyind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/yuyind"
                android:gravity="center_horizontal"
                android:text="语音讲解"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/wc"
                android:gravity="center_horizontal"
                android:text="卫生间"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/gouwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/gouwu"
                android:gravity="center_horizontal"
                android:text="购物"
                android:textColor="#333333"
                android:textSize="28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/canting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/canting"
                android:gravity="center_horizontal"
                android:text="餐厅"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/jiudian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/jiudian"
                android:gravity="center_horizontal"
                android:text="酒店住宿"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tingcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/tingcc"
                android:gravity="center_horizontal"
                android:text="停车场"
                android:textColor="#333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/damen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:drawablePadding="16px"
                android:drawableTop="@drawable/damen"
                android:gravity="center_horizontal"
                android:text="大门"
                android:textColor="#333333"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sx_guanbi"
        android:layout_width="105px"
        android:layout_height="105px"
        android:layout_toRightOf="@id/tab_layout"
        android:gravity="center"
        android:background="@color/comm_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="38px"
            android:layout_height="39px"
            android:background="@drawable/sx_guanbi" />
    </LinearLayout>


</RelativeLayout>