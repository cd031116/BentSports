<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手机登陆"
            android:textColor="#df4d4d"
            android:textSize="51px" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="41px"
            android:layout_height="41px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:layout_marginRight="43px"
            android:layout_marginTop="43px"
            android:background="@drawable/guanbi_hong" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="215px"
        android:layout_height="229px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="165px"
        android:layout_marginTop="165px"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/edit_photo"
        android:layout_width="936px"
        android:layout_height="157px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_bg"
        android:hint="请输入手机号"
        android:inputType="number"
        android:paddingBottom="10px"
        android:paddingLeft="57px"
        android:paddingTop="10px"
        android:textColor="#333333"
        android:textColorHint="#dbdbdb"
        android:textSize="43px" />

    <RelativeLayout
        android:layout_width="936px"
        android:layout_height="157px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42px"
        android:background="@drawable/edit_bg">

        <EditText
            android:id="@+id/code_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="10px"
            android:paddingLeft="57px"
            android:paddingTop="10px"
            android:textColor="#333333"
            android:textColorHint="#dbdbdb"
            android:textSize="43px" />

        <TextView
            android:id="@+id/tcode"
            android:layout_width="300px"
            android:layout_height="102px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37px"
            android:background="@drawable/code_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="43px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/commit_btn"
        android:layout_width="936px"
        android:layout_height="159px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:background="@drawable/commit_bg"
        android:gravity="center"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="51px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/wechat_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/t57"
            android:background="@drawable/wechat_sign_in"/>
    </LinearLayout>
</LinearLayout>